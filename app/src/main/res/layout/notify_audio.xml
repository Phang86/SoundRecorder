<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ny_iv"
        android:layout_width="@dimen/dimen_78dp"
        android:layout_height="@dimen/dimen_78dp"
        android:background="@mipmap/icon_app_logo"/>

    <TextView
        android:id="@+id/ny_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_toRightOf="@id/ny_iv"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textStyle="bold"
        android:textSize="@dimen/size_18sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/ny_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ny_iv"
        android:layout_below="@id/ny_tv_title"
        android:layout_alignTop="@+id/ny_iv_last"
        android:text="20220603"
        android:textSize="@dimen/size_15sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/ny_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_error"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/ny_iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_next"
        android:layout_alignBottom="@id/ny_iv"
        android:layout_toLeftOf="@id/ny_iv_close"/>

    <ImageView
        android:id="@+id/ny_iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/red_play"
        android:layout_alignTop="@id/ny_iv_next"
        android:layout_toLeftOf="@id/ny_iv_next"
        android:layout_marginRight="@dimen/dimen_10dp"/>

    <ImageView
        android:id="@+id/ny_iv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_last"
        android:layout_alignTop="@id/ny_iv_next"
        android:layout_toLeftOf="@id/ny_iv_play"
        android:layout_marginRight="@dimen/dimen_10dp"/>
</RelativeLayout>